<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:shown="@{viewModel.loading}" />

        <TextView
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/view_distance_normal"
            android:text="@string/msg_no_data"
            android:textAlignment="center"
            app:shown="@{viewModel.empty}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFavorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="@dimen/view_distance_medium"
            android:paddingBottom="@dimen/view_distance_medium"
            app:list="@{viewModel.movies}" />
    </FrameLayout>

    <data>

        <variable
            name="viewModel"
            type="id.mustofa.app.amber.ui.favorite.FavoriteViewModel" />
    </data>
</layout>
